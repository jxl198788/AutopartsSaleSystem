<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fjsaas.web.dao.PartSortDao">
	<resultMap id="partSort" type="PartSort">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="parentId" column="parent_id" />
		<result property="createDate" column="create_date" />
		<result property="creatorId" column="creator_id" />
		<result property="updateDate" column="update_date" />
		<result property="updatorId" column="updator_id" />
		<result property="isDel" column="is_del" />
	</resultMap>
	<!-- Select SQL -->
	<sql id="partSortSelector">
		SELECT
			<if test="fields != null">
			 	${fields}
			</if>
			<if test="fields == null">
				id,name,parent_id,create_date,creator_id,update_date,updator_id,is_del	
			</if>
		FROM ass_part_sort
	</sql>
	
	<sql id="partSortListWhere">
		<where>
				<if test="id != null">
					and id=#{id}
				</if>
				<if test="name != null">
					<if test="nameLike == false">
						and name=#{name}
					</if>
					<if test="nameLike == true">
						and  name like CONCAT("%",#{ name },"%")
					</if>
				</if>
				
				
				<if test="parentId != null">
					and parent_id=#{parentId}
				</if>
				<if test="createDate != null">
					and create_date=#{createDate}
				</if>
				
				
				<if test="creatorId != null">
					and creator_id=#{creatorId}
				</if>
				<if test="updateDate != null">
					and update_date=#{updateDate}
				</if>
				
				
				<if test="updatorId != null">
					and updator_id=#{updatorId}
				</if>
				<if test="isDel != null">
					and is_del=#{isDel}
				</if>
				<if test="isDel == null">
					and is_del=0
				</if>
				
				
		</where>
	</sql>
	<sql id="partSortListOrder">
		<if test="orderFields != null and orderFields.size >0">
		order by 
			<foreach collection="orderFields" separator="," item="orderField">
				${orderField.fieldName} ${orderField.order}
			</foreach>
		</if>
	</sql>

	<sql id="partSortListLimit">
		<if test="startRow != null">
			limit #{startRow},#{pageSize}
		</if>
	</sql>

	<!-- 根据主键查询 -->
	<select id="getPartSortByKey" resultMap="partSort" parameterType="hashMap">
		SELECT id,name,parent_id,create_date,creator_id,update_date,updator_id,is_del	 
		FROM ass_part_sort
		WHERE
		id=#{id}
		and is_del = 0
	</select>
	<select id="getPartSortsByKeys" resultMap="partSort" parameterType="ArrayList">
		SELECT id,name,parent_id,create_date,creator_id,update_date,updator_id,is_del 
		FROM ass_part_sort
		WHERE
		id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
		and is_del = 0
	</select>

	<!-- 根据主键删除 -->
	<update id="deleteByKey" parameterType="hashMap">
		UPDATE ass_part_sort set is_del = 1 where id=#{id}
	</update>

	<!-- 根据主键批量删除 -->
	<update id="deleteByKeys">
		UPDATE ass_part_sort set is_del = 1 
		where id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
	</update>

	<!-- 根据主键更新 -->
	<update id="updatePartSortByKey" parameterType="PartSort">
		UPDATE ass_part_sort
		<set>
			<trim suffixOverrides=",">
				<if test="id != null">
					id = #{id},
				</if>
				<if test="name != null">
					name = #{name},
				</if>
				<if test="parentId != null">
					parent_id = #{parentId},
				</if>
				<if test="createDate != null">
					create_date = #{createDate},
				</if>
				<if test="creatorId != null">
					creator_id = #{creatorId},
				</if>
				<if test="updateDate != null">
					update_date = #{updateDate},
				</if>
				<if test="updatorId != null">
					updator_id = #{updatorId},
				</if>
				<if test="isDel != null">
					is_del = #{isDel},
				</if>
			</trim>
		</set>
		WHERE
		id=#{id}
	</update>
	<!-- 分页 -->
	<select id="getPartSortListWithPage" parameterType="PartSortQuery" resultMap="partSort">
		<include refid="partSortSelector" />
		<include refid="partSortListWhere" />
		<include refid="partSortListOrder" />
		<include refid="partSortListLimit" />
	</select>
	<!-- 数据总数 -->
	<select id="getPartSortListCount" parameterType="PartSortQuery" resultType="int">
		SELECT count(1) FROM ass_part_sort
		<include refid="partSortListWhere" />
	</select>
	<!-- 数据集合 -->
	<select id="getPartSortList" parameterType="PartSortQuery" resultMap="partSort">
		<include refid="partSortSelector" />
		<include refid="partSortListWhere" />
		<include refid="partSortListOrder" />
	</select>
	<!-- 添加 -->
	<insert id="addPartSort" parameterType="PartSort">
		INSERT INTO ass_part_sort
		<trim prefix="(" suffix=")" suffixOverrides=",">
				<if test="id != null">
					id,
				</if>
				
				<if test="name != null">
					name,
				</if>
				
				<if test="parentId != null">
					parent_id,
				</if>
				
				<if test="createDate != null">
					create_date,
				</if>
				
				<if test="creatorId != null">
					creator_id,
				</if>
				
				<if test="updateDate != null">
					update_date,
				</if>
				
				<if test="updatorId != null">
					updator_id,
				</if>
				
					is_del,
				
		</trim>
		VALUES
		<trim prefix="(" suffix=")" suffixOverrides=",">
					
					<if test="id != null">
						#{id},
					</if>
					
					
					<if test="name != null">
						#{name},
					</if>
					
					
					<if test="parentId != null">
						#{parentId},
					</if>
					
					
					<if test="createDate != null">
						#{createDate},
					</if>
					
					
					<if test="creatorId != null">
						#{creatorId},
					</if>
					
					
					<if test="updateDate != null">
						#{updateDate},
					</if>
					
					
					<if test="updatorId != null">
						#{updatorId},
					</if>
					
					
					<if test="isDel != null">
						#{isDel},
					</if>
					<if test="isDel == null">
						0
					</if>
					
		</trim>
	</insert>
</mapper>