<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fjsaas.web.dao.SupplierTaskDao">
	<resultMap id="supplierTask" type="SupplierTask">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="groupName" column="group_name" />
		<result property="description" column="description" />
		<result property="status" column="status" />
		<result property="type" column="type" />
		<result property="createDate" column="create_date" />
		<result property="endDate" column="end_date" />
		<result property="creatorId" column="creator_id" />
		<result property="updateDate" column="update_date" />
		<result property="updatorId" column="updator_id" />
		<result property="isDel" column="is_del" />
	</resultMap>
	<!-- Select SQL -->
	<sql id="supplierTaskSelector">
		SELECT
			<if test="fields != null">
			 	${fields}
			</if>
			<if test="fields == null">
				id,name,group_name,description,status,type,create_date,end_date,creator_id,update_date,updator_id,is_del	
			</if>
		FROM ass_supplier_task
	</sql>
	
	<sql id="supplierTaskListWhere">
		<where>
				<if test="id != null">
					and id=#{id}
				</if>
				<if test="name != null">
					<if test="nameLike == false">
						and name=#{name}
					</if>
					<if test="nameLike == true">
						and  name like CONCAT("%",#{ name },"%")
					</if>
				</if>
				<if test="groupName != null">
					<if test="groupNameLike == false">
						and group_name=#{groupName}
					</if>
					<if test="groupNameLike == true">
						and  group_name like CONCAT("%",#{ groupName },"%")
					</if>
				</if>
				<if test="description != null">
					<if test="descriptionLike == false">
						and description=#{description}
					</if>
					<if test="descriptionLike == true">
						and  description like CONCAT("%",#{ description },"%")
					</if>
				</if>
				<if test="status != null">
					<if test="statusLike == false">
						and status=#{status}
					</if>
					<if test="statusLike == true">
						and  status like CONCAT("%",#{ status },"%")
					</if>
				</if>
				<if test="type != null">
					<if test="typeLike == false">
						and type=#{type}
					</if>
					<if test="typeLike == true">
						and  type like CONCAT("%",#{ type },"%")
					</if>
				</if>
				<if test="createDate != null">
					and create_date=#{createDate}
				</if>
				<if test="endDate != null">
					and end_date=#{endDate}
				</if>
				<if test="creatorId != null">
					and creator_id=#{creatorId}
				</if>
				<if test="updateDate != null">
					and update_date=#{updateDate}
				</if>
				<if test="updatorId != null">
					and updator_id=#{updatorId}
				</if>
				<if test="isDel != null">
					and is_del=#{isDel}
				</if>
				<if test="isDel == null">
					and is_del=0
				</if>
		</where>
	</sql>
	<sql id="supplierTaskListOrder">
		<if test="orderFields != null and orderFields.size >0">
		order by 
			<foreach collection="orderFields" separator="," item="orderField">
				${orderField.fieldName} ${orderField.order}
			</foreach>
		</if>
	</sql>

	<sql id="supplierTaskListLimit">
		<if test="startRow != null">
			limit #{startRow},#{pageSize}
		</if>
	</sql>

	<!-- 根据主键查询 -->
	<select id="getSupplierTaskByKey" resultMap="supplierTask" parameterType="hashMap">
		SELECT id,name,group_name,description,status,type,create_date,end_date,creator_id,update_date,updator_id,is_del	 
		FROM ass_supplier_task
		WHERE
		id=#{id}
		and is_del = 0
	</select>
	<select id="getSupplierTasksByKeys" resultMap="supplierTask" parameterType="ArrayList">
		SELECT id,name,group_name,description,status,type,create_date,end_date,creator_id,update_date,updator_id,is_del 
		FROM ass_supplier_task
		WHERE
		id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
		and is_del = 0
	</select>

	<!-- 根据主键删除 -->
	<update id="deleteByKey" parameterType="hashMap">
		UPDATE ass_supplier_task set is_del = 1 where id=#{id}
	</update>

	<!-- 根据主键批量删除 -->
	<update id="deleteByKeys">
		UPDATE ass_supplier_task set is_del = 1 
		where id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
	</update>

	<!-- 根据主键更新 -->
	<update id="updateSupplierTaskByKey" parameterType="SupplierTask">
		UPDATE ass_supplier_task
		<set>
			<trim suffixOverrides=",">
				<if test="id != null">
					id = #{id},
				</if>
				<if test="name != null">
					name = #{name},
				</if>
				<if test="groupName != null">
					group_name = #{groupName},
				</if>
				<if test="description != null">
					description = #{description},
				</if>
				<if test="status != null">
					status = #{status},
				</if>
				<if test="type != null">
					type = #{type},
				</if>
				<if test="createDate != null">
					create_date = #{createDate},
				</if>
				<if test="endDate != null">
					end_date = #{endDate},
				</if>
				<if test="creatorId != null">
					creator_id = #{creatorId},
				</if>
				<if test="updateDate != null">
					update_date = #{updateDate},
				</if>
				<if test="updatorId != null">
					updator_id = #{updatorId},
				</if>
				<if test="isDel != null">
					is_del = #{isDel},
				</if>
			</trim>
		</set>
		WHERE
		id=#{id}
	</update>
	<!-- 分页 -->
	<select id="getSupplierTaskListWithPage" parameterType="SupplierTaskQuery" resultMap="supplierTask">
		<include refid="supplierTaskSelector" />
		<include refid="supplierTaskListWhere" />
		<include refid="supplierTaskListOrder" />
		<include refid="supplierTaskListLimit" />
	</select>
	<!-- 数据总数 -->
	<select id="getSupplierTaskListCount" parameterType="SupplierTaskQuery" resultType="int">
		SELECT count(1) FROM ass_supplier_task
		<include refid="supplierTaskListWhere" />
	</select>
	<!-- 数据集合 -->
	<select id="getSupplierTaskList" parameterType="SupplierTaskQuery" resultMap="supplierTask">
		<include refid="supplierTaskSelector" />
		<include refid="supplierTaskListWhere" />
		<include refid="supplierTaskListOrder" />
	</select>
	<!-- 添加 -->
	<insert id="addSupplierTask" parameterType="SupplierTask">
		<selectKey order="AFTER" resultType="Integer" keyProperty="id">
			SELECT LAST_INSERT_ID()
		</selectKey>
		INSERT INTO ass_supplier_task
		<trim prefix="(" suffix=")" suffixOverrides=",">
				<if test="id != null">
					id,
				</if>
				
				<if test="name != null">
					name,
				</if>
				
				<if test="groupName != null">
					group_name,
				</if>
				
				<if test="description != null">
					description,
				</if>
				
				<if test="status != null">
					status,
				</if>
				
				<if test="type != null">
					type,
				</if>
				
				<if test="createDate != null">
					create_date,
				</if>
				
				<if test="endDate != null">
					end_date,
				</if>
				
				<if test="creatorId != null">
					creator_id,
				</if>
				
				<if test="updateDate != null">
					update_date,
				</if>
				
				<if test="updatorId != null">
					updator_id,
				</if>
				
					is_del,
				
		</trim>
		VALUES
		<trim prefix="(" suffix=")" suffixOverrides=",">
					
					<if test="id != null">
						#{id},
					</if>
					
					
					<if test="name != null">
						#{name},
					</if>
					
					
					<if test="groupName != null">
						#{groupName},
					</if>
					
					
					<if test="description != null">
						#{description},
					</if>
					
					
					<if test="status != null">
						#{status},
					</if>
					
					
					<if test="type != null">
						#{type},
					</if>
					
					
					<if test="createDate != null">
						#{createDate},
					</if>
					
					
					<if test="endDate != null">
						#{endDate},
					</if>
					
					
					<if test="creatorId != null">
						#{creatorId},
					</if>
					
					
					<if test="updateDate != null">
						#{updateDate},
					</if>
					
					
					<if test="updatorId != null">
						#{updatorId},
					</if>
					
					
					<if test="isDel != null">
						#{isDel},
					</if>
					<if test="isDel == null">
						0
					</if>
					
		</trim>
	</insert>
</mapper>