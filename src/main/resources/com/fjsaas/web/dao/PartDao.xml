<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fjsaas.web.dao.PartDao">
	<resultMap id="part" type="Part">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="type" column="type" />
		<result property="size" column="size" />
		<result property="description" column="description" />
		<result property="attributes" column="attributes" />
		<result property="imgs" column="imgs" />
		<result property="partSortId" column="part_sort_id" />
		<result property="createDate" column="create_date" />
		<result property="creatorId" column="creator_id" />
		<result property="updateDate" column="update_date" />
		<result property="updatorId" column="updator_id" />
		<result property="isDel" column="is_del" />
	</resultMap>
	<!-- Select SQL -->
	<sql id="partSelector">
		SELECT
			<if test="fields != null">
			 	${fields}
			</if>
			<if test="fields == null">
				id,name,type,size,description,attributes,imgs,part_sort_id,create_date,creator_id,update_date,updator_id,is_del	
			</if>
		FROM ass_part
	</sql>
	
	<sql id="partListWhere">
		<where>
				<if test="id != null">
					and id=#{id}
				</if>
				<if test="name != null">
					<if test="nameLike == false">
						and name=#{name}
					</if>
					<if test="nameLike == true">
						and  name like CONCAT("%",#{ name },"%")
					</if>
				</if>
				
				
				<if test="type != null">
					<if test="typeLike == false">
						and type=#{type}
					</if>
					<if test="typeLike == true">
						and  type like CONCAT("%",#{ type },"%")
					</if>
				</if>
				
				
				<if test="size != null">
					<if test="sizeLike == false">
						and size=#{size}
					</if>
					<if test="sizeLike == true">
						and  size like CONCAT("%",#{ size },"%")
					</if>
				</if>
				
				
				<if test="description != null">
					<if test="descriptionLike == false">
						and description=#{description}
					</if>
					<if test="descriptionLike == true">
						and  description like CONCAT("%",#{ description },"%")
					</if>
				</if>
				
				
				<if test="attributes != null">
					<if test="attributesLike == false">
						and attributes=#{attributes}
					</if>
					<if test="attributesLike == true">
						and  attributes like CONCAT("%",#{ attributes },"%")
					</if>
				</if>
				
				
				<if test="imgs != null">
					<if test="imgsLike == false">
						and imgs=#{imgs}
					</if>
					<if test="imgsLike == true">
						and  imgs like CONCAT("%",#{ imgs },"%")
					</if>
				</if>
				
				
				<if test="partSortId != null">
					and part_sort_id=#{partSortId}
				</if>
				<if test="createDate != null">
					and create_date=#{createDate}
				</if>
				
				
				<if test="creatorId != null">
					and creator_id=#{creatorId}
				</if>
				<if test="updateDate != null">
					and update_date=#{updateDate}
				</if>
				
				
				<if test="updatorId != null">
					and updator_id=#{updatorId}
				</if>
				<if test="isDel != null">
					and is_del=#{isDel}
				</if>
				<if test="isDel == null">
					and is_del=0
				</if>
				
				
		</where>
	</sql>
	<sql id="partListOrder">
		<if test="orderFields != null and orderFields.size >0">
		order by 
			<foreach collection="orderFields" separator="," item="orderField">
				${orderField.fieldName} ${orderField.order}
			</foreach>
		</if>
	</sql>

	<sql id="partListLimit">
		<if test="startRow != null">
			limit #{startRow},#{pageSize}
		</if>
	</sql>

	<!-- 根据主键查询 -->
	<select id="getPartByKey" resultMap="part" parameterType="hashMap">
		SELECT id,name,type,size,description,attributes,imgs,part_sort_id,create_date,creator_id,update_date,updator_id,is_del	 
		FROM ass_part
		WHERE
		id=#{id}
		and is_del = 0
	</select>
	<select id="getPartsByKeys" resultMap="part" parameterType="ArrayList">
		SELECT id,name,type,size,description,attributes,imgs,part_sort_id,create_date,creator_id,update_date,updator_id,is_del 
		FROM ass_part
		WHERE
		id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
		and is_del = 0
	</select>

	<!-- 根据主键删除 -->
	<update id="deleteByKey" parameterType="hashMap">
		UPDATE ass_part set is_del = 1 where id=#{id}
	</update>

	<!-- 根据主键批量删除 -->
	<update id="deleteByKeys">
		UPDATE ass_part set is_del = 1 
		where id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
	</update>

	<!-- 根据主键更新 -->
	<update id="updatePartByKey" parameterType="Part">
		UPDATE ass_part
		<set>
			<trim suffixOverrides=",">
				<if test="id != null">
					id = #{id},
				</if>
				<if test="name != null">
					name = #{name},
				</if>
				<if test="type != null">
					type = #{type},
				</if>
				<if test="size != null">
					size = #{size},
				</if>
				<if test="description != null">
					description = #{description},
				</if>
				<if test="attributes != null">
					attributes = #{attributes},
				</if>
				<if test="imgs != null">
					imgs = #{imgs},
				</if>
				<if test="partSortId != null">
					part_sort_id = #{partSortId},
				</if>
				<if test="createDate != null">
					create_date = #{createDate},
				</if>
				<if test="creatorId != null">
					creator_id = #{creatorId},
				</if>
				<if test="updateDate != null">
					update_date = #{updateDate},
				</if>
				<if test="updatorId != null">
					updator_id = #{updatorId},
				</if>
				<if test="isDel != null">
					is_del = #{isDel},
				</if>
			</trim>
		</set>
		WHERE
		id=#{id}
	</update>
	<!-- 分页 -->
	<select id="getPartListWithPage" parameterType="PartQuery" resultMap="part">
		<include refid="partSelector" />
		<include refid="partListWhere" />
		<include refid="partListOrder" />
		<include refid="partListLimit" />
	</select>
	<!-- 数据总数 -->
	<select id="getPartListCount" parameterType="PartQuery" resultType="int">
		SELECT count(1) FROM ass_part
		<include refid="partListWhere" />
	</select>
	<!-- 数据集合 -->
	<select id="getPartList" parameterType="PartQuery" resultMap="part">
		<include refid="partSelector" />
		<include refid="partListWhere" />
		<include refid="partListOrder" />
	</select>
	<!-- 添加 -->
	<insert id="addPart" parameterType="Part">
		INSERT INTO ass_part
		<trim prefix="(" suffix=")" suffixOverrides=",">
				<if test="id != null">
					id,
				</if>
				
				<if test="name != null">
					name,
				</if>
				
				<if test="type != null">
					type,
				</if>
				
				<if test="size != null">
					size,
				</if>
				
				<if test="description != null">
					description,
				</if>
				
				<if test="attributes != null">
					attributes,
				</if>
				
				<if test="imgs != null">
					imgs,
				</if>
				
				<if test="partSortId != null">
					part_sort_id,
				</if>
				
				<if test="createDate != null">
					create_date,
				</if>
				
				<if test="creatorId != null">
					creator_id,
				</if>
				
				<if test="updateDate != null">
					update_date,
				</if>
				
				<if test="updatorId != null">
					updator_id,
				</if>
				
					is_del,
				
		</trim>
		VALUES
		<trim prefix="(" suffix=")" suffixOverrides=",">
					
					<if test="id != null">
						#{id},
					</if>
					
					
					<if test="name != null">
						#{name},
					</if>
					
					
					<if test="type != null">
						#{type},
					</if>
					
					
					<if test="size != null">
						#{size},
					</if>
					
					
					<if test="description != null">
						#{description},
					</if>
					
					
					<if test="attributes != null">
						#{attributes},
					</if>
					
					
					<if test="imgs != null">
						#{imgs},
					</if>
					
					
					<if test="partSortId != null">
						#{partSortId},
					</if>
					
					
					<if test="createDate != null">
						#{createDate},
					</if>
					
					
					<if test="creatorId != null">
						#{creatorId},
					</if>
					
					
					<if test="updateDate != null">
						#{updateDate},
					</if>
					
					
					<if test="updatorId != null">
						#{updatorId},
					</if>
					
					
					<if test="isDel != null">
						#{isDel},
					</if>
					<if test="isDel == null">
						0
					</if>
					
		</trim>
	</insert>
</mapper>