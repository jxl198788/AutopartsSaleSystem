<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.fjsaas.web.dao.ProductcodeOeDao">
	<resultMap id="productcodeOe" type="ProductcodeOe">
		<result property="id" column="id" />
		<result property="referenceCode" column="reference_code" />
		<result property="oeCode" column="oe_code" />
		<result property="productCode" column="product_code" />
		<result property="createDate" column="create_date" />
		<result property="creatorId" column="creator_id" />
		<result property="updateDate" column="update_date" />
		<result property="updatorId" column="updator_id" />
		<result property="isDel" column="is_del" />
	</resultMap>
	<!-- Select SQL -->
	<sql id="productcodeOeSelector">
		SELECT
			<if test="fields != null">
			 	${fields}
			</if>
			<if test="fields == null">
				id,reference_code,oe_code,product_code,create_date,creator_id,update_date,updator_id,is_del	
			</if>
		FROM ass_productcode_oe
	</sql>
	
	<sql id="productcodeOeListWhere">
		<where>
				<if test="id != null">
					and id=#{id}
				</if>
				<if test="referenceCode != null">
					<if test="referenceCodeLike == false">
						and reference_code=#{referenceCode}
					</if>
					<if test="referenceCodeLike == true">
						and  reference_code like CONCAT("%",#{ referenceCode },"%")
					</if>
				</if>
				
				
				<if test="oeCode != null">
					<if test="oeCodeLike == false">
						and oe_code=#{oeCode}
					</if>
					<if test="oeCodeLike == true">
						and  oe_code like CONCAT("%",#{ oeCode },"%")
					</if>
				</if>
				
				
				<if test="productCode != null">
					<if test="productCodeLike == false">
						and product_code=#{productCode}
					</if>
					<if test="productCodeLike == true">
						and  product_code like CONCAT("%",#{ productCode },"%")
					</if>
				</if>
				
				
				<if test="createDate != null">
					and create_date=#{createDate}
				</if>
				
				
				<if test="creatorId != null">
					and creator_id=#{creatorId}
				</if>
				<if test="updateDate != null">
					and update_date=#{updateDate}
				</if>
				
				
				<if test="updatorId != null">
					and updator_id=#{updatorId}
				</if>
				<if test="isDel != null">
					and is_del=#{isDel}
				</if>
				<if test="isDel == null">
					and is_del=0
				</if>
				
				
		</where>
	</sql>
	<sql id="productcodeOeListOrder">
		<if test="orderFields != null and orderFields.size >0">
		order by 
			<foreach collection="orderFields" separator="," item="orderField">
				${orderField.fieldName} ${orderField.order}
			</foreach>
		</if>
	</sql>

	<sql id="productcodeOeListLimit">
		<if test="startRow != null">
			limit #{startRow},#{pageSize}
		</if>
	</sql>

	<!-- 根据主键查询 -->
	<select id="getProductcodeOeByKey" resultMap="productcodeOe" parameterType="hashMap">
		SELECT id,reference_code,oe_code,product_code,create_date,creator_id,update_date,updator_id,is_del	 
		FROM ass_productcode_oe
		WHERE
		id=#{id}
		and is_del = 0
	</select>
	<select id="getProductcodeOesByKeys" resultMap="productcodeOe" parameterType="ArrayList">
		SELECT id,reference_code,oe_code,product_code,create_date,creator_id,update_date,updator_id,is_del 
		FROM ass_productcode_oe
		WHERE
		id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
		and is_del = 0
	</select>

	<!-- 根据主键删除 -->
	<update id="deleteByKey" parameterType="hashMap">
		UPDATE ass_productcode_oe set is_del = 1 where id=#{id}
	</update>

	<!-- 根据主键批量删除 -->
	<update id="deleteByKeys">
		UPDATE ass_productcode_oe set is_del = 1 
		where id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
	</update>

	<!-- 根据主键更新 -->
	<update id="updateProductcodeOeByKey" parameterType="ProductcodeOe">
		UPDATE ass_productcode_oe
		<set>
			<trim suffixOverrides=",">
				<if test="id != null">
					id = #{id},
				</if>
				<if test="referenceCode != null">
					reference_code = #{referenceCode},
				</if>
				<if test="oeCode != null">
					oe_code = #{oeCode},
				</if>
				<if test="productCode != null">
					product_code = #{productCode},
				</if>
				<if test="createDate != null">
					create_date = #{createDate},
				</if>
				<if test="creatorId != null">
					creator_id = #{creatorId},
				</if>
				<if test="updateDate != null">
					update_date = #{updateDate},
				</if>
				<if test="updatorId != null">
					updator_id = #{updatorId},
				</if>
				<if test="isDel != null">
					is_del = #{isDel},
				</if>
			</trim>
		</set>
		WHERE
		id=#{id}
	</update>
	<!-- 分页 -->
	<select id="getProductcodeOeListWithPage" parameterType="ProductcodeOeQuery" resultMap="productcodeOe">
		<include refid="productcodeOeSelector" />
		<include refid="productcodeOeListWhere" />
		<include refid="productcodeOeListOrder" />
		<include refid="productcodeOeListLimit" />
	</select>
	<!-- 数据总数 -->
	<select id="getProductcodeOeListCount" parameterType="ProductcodeOeQuery" resultType="int">
		SELECT count(1) FROM ass_productcode_oe
		<include refid="productcodeOeListWhere" />
	</select>
	<!-- 数据集合 -->
	<select id="getProductcodeOeList" parameterType="ProductcodeOeQuery" resultMap="productcodeOe">
		<include refid="productcodeOeSelector" />
		<include refid="productcodeOeListWhere" />
		<include refid="productcodeOeListOrder" />
	</select>
	<!-- 添加 -->
	<insert id="addProductcodeOe" parameterType="ProductcodeOe">
		INSERT INTO ass_productcode_oe
