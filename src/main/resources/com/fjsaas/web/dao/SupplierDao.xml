	<!-- 查询所有的供应商信息，用于页面表格展示 -->
	<select id="getSupplierInfoList" resultMap="supplier" parameterType="SupplierQuery">
		SELECT
				t1.id,t1.username,t1.telphone,t2.id supplierid,t2.name suppliername,t5.name rolename,t3.domain_name,t1.locked userlocked,t1.is_del	
		FROM ass_user t1
		LEFT JOIN ass_supplier t2 ON t1.suppiler_id = t2.id
		LEFT JOIN ass_domain t3 ON t2.id = t3.supplier_id
		LEFT JOIN ass_user_role t4 ON t1.id = t4.user_id
		LEFT JOIN ass_role t5 ON t4.role_id = t5.id
		WHERE
			 t1.is_del=0
	</select>
	
	<!-- 根据id查看某个供应商的详细信息 -->
	<select id="getSupplierById" resultMap="supplier" parameterType="hashMap">
		SELECT t1.id,t1.username,t1.telphone,t3.domain_name,t2.name suppliername,t2.business_license_url,
			   t2.province,t2.city,t2.town,t2.addr,t2.linkman,t1.is_root,t1.is_del	 
		FROM ass_user t1
		LEFT JOIN ass_supplier t2 ON t1.suppiler_id = t2.id
		LEFT JOIN ass_domain t3 ON t2.id = t3.supplier_id
		WHERE
		t1.id=#{id}
		and t1.is_del = 0
	</select>
	
