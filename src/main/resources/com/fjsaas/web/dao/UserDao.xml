		</trim>
		VALUES
		<trim prefix="(" suffix=")" suffixOverrides=",">
					
					<if test="id != null">
						#{id},
					</if>
					
					
					<if test="telphone != null">
						#{telphone},
					</if>
					
					
					<if test="username != null">
						#{username},
					</if>
					
					
					<if test="realname != null">
						#{realname},
					</if>
					
					
					<if test="password != null">
						#{password},
					</if>
					
					
					<if test="job != null">
						#{job},
					</if>
					
					
					<if test="email != null">
						#{email},
					</if>
					
					
					<if test="address != null">
						#{address},
					</if>
					
					
					<if test="groupId != null">
						#{groupId},
					</if>
					
					
					<if test="isRoot != null">
						#{isRoot},
					</if>
					
					
					<if test="suppilerId != null">
						#{suppilerId},
					</if>
					
					
					<if test="locked != null">
						#{locked},
					</if>
					
					
					<if test="isActivation != null">
						#{isActivation},
					</if>
					
					
					<if test="salt != null">
						#{salt},
					</if>
					
					
					<if test="createDate != null">
						#{createDate},
					</if>
					
					
					<if test="creatorId != null">
						#{creatorId},
					</if>
					
					
					<if test="updateDate != null">
						#{updateDate},
					</if>
					
					
					<if test="updatorId != null">
						#{updatorId},
					</if>
					
					
					<if test="isDel != null">
						#{isDel},
					</if>
					<if test="isDel == null">
						0,
					</if>
					
		</trim>
	</insert>
</mapper>